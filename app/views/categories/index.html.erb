<div class="row-fluid">
  <div class="form-actions span8">
    <div class="nav">
      <div class="navbar-inner"><h6><b>品目列表</b></h6></div>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th>品目名称</th>
        <th>分类</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @categories.each do |category| %>
          <tr>
            <td><%= category.Name %></td>
            <td><%= category.Type %></td>
            <td><%= link_to '查看', category %></td>
            <td><%= link_to '编辑', edit_category_path(category) %></td>
            <td><%= link_to '删除', category, method: :delete, data: {confirm: '是否删除?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="align-center">
      <%= link_to '新建品目', new_category_path, {:class => "btn btn-primary"} %>
    </div>

  </div>
</div>