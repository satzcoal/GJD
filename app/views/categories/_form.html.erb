<%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row-fluid">
      <div class="widget">
        <div class="span2">
          <div class="input-prepend">
            <span class="add-on">分类： </span>
            <%= select(:category, :Type, [['原料', "原料"], ['产品', "产品"]]) %>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="widget">
        <div class="span2">
          <div class="input-prepend">
            <span class="add-on">品目： </span>
            <%= f.text_field :Name, {:Class => "input-large"} %>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="align-center">
        <%= f.submit("确定", {:Class => "btn btn-primary btn-large"}) %>
      </div>
    </div>
<% end %>