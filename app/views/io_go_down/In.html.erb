<h1>入库</h1>
<hr>
<%= form_tag(controller:"io_go_down", action:"CreateIn", method:"Post") do %>
<ul>
  <li>仓库:</li>
  <li><%= @godown.Name %></li>
  <li>订单</li>
  <li><%= @order.Name %></li>
</ul>
<ul>
  <li>
    <table>
      <thead>
      <tr>
        <th>序号</th>
        <th>分类</th>
        <th>物品名称</th>
        <th>规格</th>
        <th>型号</th>
        <th>数量</th>
        <th>入库数量</th>
        <th>批次</th>
        <th>生产日期</th>
        <th>保质期</th>
        <th>供应商</th>
        <th>仓库</th>
      </tr>
      </thead>

      <tbody>
      <% i=1 %>
      <% @sub_orders.each do |sub_order| %>
          <tr>
            <td><%= i %></td>
            <% i =i+1 %>
            <% @item = Item.find(sub_order.Item_id) %>
            <td><%= @item.Type %></td>
            <td><%= @item.Name %></td>
            <td><%= @item.CategoryName %></td>
            <td><%= @item.subCategoryName %></td>
            <td><%= sub_order.Sum %></td>
            <td><%= text_field "itemline#{i}","Sum1" %></td>
            <td><%= select("itemline#{i}","batch",[["",""]])%></td>
            <td><%= text_field "itemline#{i}","CreateTime" %></td>
            <td><%= text_field "itemline#{i}","ShelfLife" %></td>
            <td><%= text_field "itemline#{i}","MadeIn" %></td>
            <td><%= GoDown.find(sub_order.GoDown_id).Name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </li>
  <li>
    <input type="submit" value="入库">
  </li>
</ul>
<% end %>
