<%= form_tag(out_orders_outgodown_path) do |f| %>
    <% if @out_order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@out_order.errors.count, "error") %> prohibited this out_order from being saved:</h2>

          <ul>
            <% @out_order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= hidden_field :out_order,:id%>
    <h1>出库单：<%= @out_order.OutOrderId %> 仓库：<%=@gd.Name %></h1>
    <h3>订单编号：<a href="/out_orders/<%= @order.id %>"><%=@order.OrderId%> </a> 订单名称：<a href="/out_orders/<%= @order.id %>"><%= @order.Name %></a> 创建时间：<%= @order.CreateTime %> 创建人：<%= @order.CreateUser %>  </h3>
    <hr>
    <ul>
      <li>
        <table>
          <thead>
          <tr>
            <th>序号</th>
            <th>物品名称</th>
            <th>规格</th>
            <th>型号</th>
            <th>批次号</th>
            <th>生成日期</th>
            <th>保质期</th>
            <th>供货商</th>
            <th>数量</th>
            <th>实际出库数量</th>
          </tr>
          </thead>

          <tbody>
          <% i=1 %>
          <input type="hidden" id="items_count" name="items[count]" value="<%=@sub_orders.count %>">
          <% @sub_orders.each do |sub_order| %>
              <tr>
                <td><%= i %> <input type="hidden" id="itemline<%=i %>_Item_id" name="itemline<%=i %>[Item_id]" value="<%=sub_order.Item_id %>"></td>
                <% @item = Item.find(sub_order.Item_id) %>
                <td><%= @item.Name %></td>
                <td><%= @item.CategoryName %></td>
                <td><%= @item.subCategoryName %></td>
                <td><%= text_field "itemline#{i}","BatchId" %></td>
                <td><%= text_field "itemline#{i}","CreateTime" %></td>
                <td><%= text_field "itemline#{i}","ShelfLife" %></td>
                <td><%= text_field "itemline#{i}","MadeIn" %></td>
                <td><%= sub_order.Sum %></td>
                <td><%= number_field "itemline#{i}","Sum" %></td>
              </tr>
              <% i =i+1 %>
          <% end %>
          </tbody>

        </table>

      </li>
    </ul>
    <hr/>
    <input type="submit" value="出库">

<% end %>