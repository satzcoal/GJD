
    <%= form_for(@order) do |f| %>
        <% if @order.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

              <ul>
                <% @order.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <ul class="main">
          <%= f.hidden_field :Type %>
          <li> 订单编号： <%= f.text_field :OrderId %></li>
          <li>名称： <%= f.text_field :Name %></li>
          <div class="clear"></div>
        </ul>
        <ul>
          <li style="list-style-type:none">
            <table class="table">
              <thead>
              <tr>
                <th>序号</th>
                <th>物品名称</th>
                <th>品目</th>
                <th>型号</th>
                <th>仓库</th>
                <th>生产日期</th>
                <th>库存量</th>
                <th>数量</th>
              </tr>
              </thead>
              <tbody>
              <% for x in 1..10 %>
                  <tr id="<%= x %>">
                    <td><%= x %><%= hidden_field "itemline#{x}", "Item_id" %></td>
                    <td><select id="itemNo<%= x %>" class="items" rowid="<%= x %>">
                      <option value="请选择">请选择</option>
                    </select></td>
                    <td><input type="text" id="category<%= x %>" readonly="true"></td>
                    <td><input type="text" id="subcategory<%= x %>" readonly="true"></td>
                    <td>
                      <select id="itemline<%= x %>_GoDown_id" name="itemline<%= x %>[GoDown_id]" class="GoDowns" rowid="<%= x %>"></select>
                    </td>
                    <td>
                      <select id="itemline<%= x %>_Batch_id" name="itemline<%= x %>[Batch_id]" class="Batchs" rowid="<%= x %>"></select>
                    </td>
                    <td><input type="text" id="sum<%= x %>" readonly="true"></td>
                    <td><%= number_field "itemline#{x}", "Sum" %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </li>
        </ul>
        <hr/>
        <div><input type="hidden" id="itemscount" value="0"><%= f.submit("创建" { :class => "btn btn-primary" }) %></div>
    <% end %>
  </div>
</div>
