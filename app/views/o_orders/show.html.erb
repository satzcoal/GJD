<p id="notice"><%= notice %></p>
<div class="row-fluid">
  <div class="right-content span10">
    <div class="nav">
      <div class="navbar-inner"><h6>销售订单</h6></div>
    </div>
    <div class="well-white body">
      <div class="row-fluid">
        <div class="widget">
          <div class="span3">
            <div class="input-prepend">
              <span class="add-on">订单编号： </span>
              <%= text_field :o_order, :OrderId, {:disabled => "disabled"} %>
            </div>
          </div>
          <div class="span3">
            <div class="input-prepend">
              <span class="add-on">客户： </span>
              <%= text_field :o_order, :Customer, {:disabled => "disabled"} %>
            </div>
          </div>
          <div class="span6">
            <div class="input-prepend">
              <span class="add-on"> 地址：</span>
              <%= text_field :o_order, :Address, {:Class => "input-xlarge", :disabled => "disabled"} %>
            </div>
          </div>
        </div>
      </div>
      <table class="table">
        <thead>
        <tr>
          <th>序号</th>
          <th>物品名称</th>
          <th>规格</th>
          <th>型号</th>
          <th>数量</th>
        </tr>
        </thead>

        <tbody>
        <% i=1 %>
        <% @sub_orders.each do |sub_order| %>
            <tr>
              <td><%= i %></td>

              <% @item = Item.find(sub_order.Item_id) %>
              <td><%= @item.Name %></td>
              <td><%= @item.CategoryName %></td>
              <td><%= @item.subCategoryName %></td>
              <td><%= sub_order.Sum %></td>
            </tr>
            <% i =i+1 %>
        <% end %>
        </tbody>
      </table>
      <% if @o_order.State=="新建" %>
          <div class="align-center"> <%= link_to "生成出库单", "/orders/split/#{@o_order.id}", {:Class => "btn btn-primary"} %></div>
      <% end %>
    </div>

  </div>
</div>