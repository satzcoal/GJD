<style>
    .add-on {
        width: 200px;
    }
</style>
<div class="row-fluid">
  <%= form_tag(in_orders_ingodown_path) do |f| %>
      <% if @in_order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@in_order.errors.count, "error") %> prohibited this in_order from being saved:</h2>

            <ul>
              <% @in_order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="right-content span12">
        <div class="nav">
          <div class="navbar-inner"><h6>入库</h6></div>
        </div>
        <div class="well-white body">
          <div class="row-fluid">
            <%= hidden_field :in_order, :id %>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on">订单编号： </span>
                <input type="text" readonly="true" value="<%= @order.OrderId %>" class="input-prepend">
              </div>
            </div>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on">订单名称： </span>
                <input type="text" readonly="true" value="<%= @order.Name %>" class="input-prepend">
              </div>
            </div>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on"> 创建人： </span>
                <input type="text" readonly="true" value="<%= @order.CreateUser %>" class="input-prepend">
              </div>
            </div>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on">出库单： </span>
                <input type="text" readonly="true" value="<%= @in_order.InOrderId %>" class="input-prepend">
              </div>
            </div>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on"> 仓库： </span>
                <input type="text" readonly="true" value="<%= @gd.Name %>" class="input-prepend">
              </div>
            </div>
            <div class="span3">
              <div class="input-prepend">
                <span class="add-on">创建时间： </span>
                <input type="text" readonly="true" value="<%= @order.CreateTime %>" class="input-prepend">
              </div>
            </div>
          </div>
          <table class="table">
            <thead>
            <tr>
              <th>序号</th>
              <th>物品名称</th>
              <th>规格</th>
              <th>型号</th>
              <th>数量</th>
              <th>实际入库数量</th>
              <th>批次号</th>
              <th>生成日期</th>
              <th>保质期</th>
              <th>供货商</th>
            </tr>
            </thead>

            <tbody>
            <% i=1 %>
            <input type="hidden" id="items_count" name="items[count]" value="<%= @sub_orders.count %>">
            <% @sub_orders.each do |sub_order| %>
                <tr>
                  <td><%= i %>
                    <input type="hidden" id="itemline<%= i %>_Item_id" name="itemline<%= i %>[Item_id]" value="<%= sub_order.Item_id %>">
                  </td>
                  <% @item = Item.find(sub_order.Item_id) %>
                  <td><%= @item.Name %></td>
                  <td><%= @item.CategoryName %></td>
                  <td><%= @item.subCategoryName %></td>
                  <td><%= sub_order.Sum %></td>
                  <td><%= number_field "itemline#{i}", "Sum" %></td>
                  <td><%= text_field "itemline#{i}", "BatchId" %></td>
                  <td><%= text_field "itemline#{i}", "CreateTime" %></td>
                  <td><%= text_field "itemline#{i}", "Shelflife" %></td>
                  <td><%= text_field "itemline#{i}", "MadeIn" %></td>
                </tr>
                <% i =i+1 %>
            <% end %>
            </tbody>

          </table>
          <div class="align-center">
            <input type="submit" value="入库" class="btn btn-primary">
          </div>

  <% end %>
  </div>
  </div>
</div>
